<section class="grid grid-rows-1 grid-cols-3">
  <div class="col-span-2">
    <div
      id="bank-numbers"
      x-data="{ bankNum: [
            {
              nama: 'BSI',
              norek: 6142746020
            },
            {
              nama: 'BRI',
              norek: 693901009058534
            }
          ] }"
    >
      <template x-for="bank in bankNum">
        <div class="bank-number">
          <h4 x-text="bank.nama"></h4>
          <div>
            <p x-text="bank.norek"></p>
          </div>
          <button
            class="copy-btn"
            x-on:click="navigator.clipboard.writeText(bank.norek).then(() => { alert(`Norek ${bank.nama} berhasil disalin`) }).catch(() => { alert('Norek gagal disalin') })"
            >Copy</button
          >
        </div>
      </template>
    </div>
    <h4>an. Yunus Abdul Kholiq</h4>
  </div>
  <div class="flex-col">
    <h2>Konfirmasi</h2>
    <div x-data="{ nama: '', norek:'', option: 'option1' }">
        <input type="text" x-model="nama" placeholder="Masukkan Nama">
        <input type="number" x-model="norek" placeholder="Masukkan Nomor Rekening anda">
    
        <label>
          <input type="radio" x-model="option" value="BSI">
          BSI
        </label>
        
        <label>
          <input type="radio" x-model="option" value="BRI">
         BRI
        </label>
        <a 
        <a target="blank" x-bind:href="`https://wa.me/62895344232330?text=Assalamualaikum, Saya ${nama} telah mentransfer donasi melalui bank ${option}. Berikut nomor rekening milik saya ${norek}`"> KONFIRMASI </a>

      </div>
  </div>
</section>

  
  