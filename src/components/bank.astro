<section class="flex flex-col flex-wrap md:grid md:grid-rows-1 md:grid-cols-3 gap-4 mt-6">
  <div class="lrd col-span-2 p-12 text-center md:p-15">
    <div
      id="bank-numbers"
      x-data="{ bankNum: [
            {
              nama: 'BSI',
              norek: 6142746020
            },
            {
              nama: 'BRI',
              norek: 693901009058534
            }
          ] }"
          class="flex flex-col "
    >
      <template x-for="bank in bankNum">
        <div class="bank-number sm:flex-inline flex-wrap gap-5   break-words md:text-13  mt-5">
          <h4 x-text="bank.nama" class="font-800 text-8" x-bind:class="bank.nama === 'BSI' ?  'text-amber' : 'text-lightBlue'"></h4>
          <div>
            <p x-text="bank.norek" class="font-700 text-12"></p>
          </div>
        <div class="ehem">

          <a
            class="code text-8"
            x-on:click="navigator.clipboard.writeText(bank.norek).then(() => { alert(`Norek ${bank.nama} berhasil disalin`) }).catch(() => { alert('Norek gagal disalin') })"
            >Copy</a
          ></div>
        </div>
      </template>
    </div>
    <h4 class="text-5 md:text-right md:text-10 mt-5 font-400">an. Yunus Abdul Kholiq</h4>
  </div>
  <div class="flex-col lrd p-15">
    <h2 class="font-600 text-9">Konfirmasi</h2>
    <div class="flex flex-col gap-4 " x-data="{ nama: '', norek:'', option: 'option1' }">
        <input type="text" class="border-2 px-1 h-8 rounded-md" x-model="nama" placeholder="Masukkan Nama">
        <input id="nomor" class="border-2 px-1 h-8 rounded-md" inputmode="numeric" pattern="[0-9]*" placeholder="Masukkan Nomor Rekening anda" required title="Masukkan hanya angka">
    
        <label class="text-5 mx-auto">
          <input type="radio" x-model="option" value="BSI">
          BSI
        
          <input type="radio" x-model="option" value="BRI">
         BRI
        </label> 
        <a target="blank" class=" tes mx-auto" :href="`https://wa.me/62895344232330?text=Assalamualaikum, Saya **${nama}** telah mentransfer donasi melalui bank **${option}**. Berikut nomor rekening milik saya **${norek}**`"> KONFIRMASI </a>
      </div>
  </div>
</section>

<script>
const inputNumber = document.getElementById("nomor");
inputNumber.addEventListener("keydown", (event) => {
  event.target.value = event.target.value.replace(/[^0-9]/g, "");
}); 

</script>

